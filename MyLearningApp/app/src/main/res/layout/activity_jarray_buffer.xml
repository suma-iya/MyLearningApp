<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".chapter.two.JArrayBuffer"
    android:background="#AD9AB1"
    android:padding="10dp">

<TextView
    android:id="@+id/textViewTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ArrayBuffer in JavaScript"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/textViewIntroduction"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="ArrayBuffer is a built-in object in JavaScript that represents a generic, fixed-length binary data buffer. It is particularly useful when working with binary data, such as reading files or handling network protocols."
    android:textSize="22sp"
    app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/textViewUsage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Usage:"
    android:textSize="26sp"
    app:layout_constraintTop_toBottomOf="@+id/textViewIntroduction"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/textViewUsageDescription"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="To use ArrayBuffer in JavaScript, you can create a new ArrayBuffer instance and manipulate binary data directly. Common use cases include reading/writing files, handling network data, or parsing binary formats."
    android:textSize="22sp"
    app:layout_constraintTop_toBottomOf="@+id/textViewUsage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/textViewExamples"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Examples:"
    android:textSize="26sp"
    app:layout_constraintTop_toBottomOf="@+id/textViewUsageDescription"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/textViewExample1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="1. Creating an ArrayBuffer"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@+id/textViewExamples"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp" />

<TextView
    android:id="@+id/textViewExample2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="2. Reading/Writing Binary Data"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@+id/textViewExample1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp" />

<!-- You can add more content or examples to explain ArrayBuffer in JavaScript as needed. -->

</androidx.constraintlayout.widget.ConstraintLayout>
